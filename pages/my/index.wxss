.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	background: #e85654;
  width: 750rpx;
	padding: 16rpx 0;
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #FFF;
}


.version {
  background: #eee;
  width:100%;
  height: 16rpx;
	line-height: 16rpx;
	font-size: 8pt;
	text-align: center;  
  padding: 16rpx;
}

.my-item{
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 100rpx;
}

.about{
  width:100%;
  height: 64rpx;
	font-size: 40rpx;
	text-align: center; 
  padding: 32rpx;
  border-bottom:1px solid #eee;
}

.dashang {
  font-size: 41pt;
  text-align: center;
	margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 160rpx;
	height: 160rpx;
  color:#f8f5f5;
	border-radius: 50%;
  background-color: #e85654;
  vertical-align: middle;
  box-shadow: 3px 3px 2px #888888;
}

.dashang1yuan {
  margin-bottom: 20rpx;
  color:#e85654;
  font-size:11pt;
}